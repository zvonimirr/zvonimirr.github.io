---
import { format } from 'date-fns';

const title = Astro.props.title;
const description = Astro.props.description;
const image = Astro.props.image;
const url = Astro.props.url;
const date = format(Astro.props.date, 'MMMM yyyy');
---
<a href={`/projects/${url}`} class="flex flex-col bg-gray-100 shadow-md rounded-md p-4 transition-colors duration-500 hover:bg-gray-300">
  <img src={image} alt={title} class="rounded-md mb-4 h-48 object-cover" />
  <div>
    <h1 class="text-2xl font-bold mb-2">{title}</h1>
    <p class="text-gray-600 mb-4">{description}</p>
    <span class="text-gray-500 text-sm">{date}</span>
  </div>
</a>

