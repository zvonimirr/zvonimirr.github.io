---
import { Icon } from 'astro-icon';

const socials = [
  {
    name: 'mdi:github',
    url: 'https://github.com/zvonimirr',
  }, 
  {
    name: 'mdi:linkedin',
    url: 'https://linkedin.com/in/zvonimirr',
  },
  {
    name: 'mdi:email',
    url: 'mailto:zvonimir@mailfence.com',
  },
];
---
<nav>
  <ul class="flex flex-row gap-2">
    {socials.map(social => (
      <li>
        <a class="transition-colors ease-in-out duration-500 hover:text-blue-500" href={social.url} target="_blank" rel="noopener noreferrer">
          <Icon name={social.name} />
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  svg {
    @apply w-6 h-6;
  }
</style>
